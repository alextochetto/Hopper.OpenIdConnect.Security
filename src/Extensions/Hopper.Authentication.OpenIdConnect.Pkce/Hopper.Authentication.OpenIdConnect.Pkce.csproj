<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Authors>Alex Tochetto</Authors>
    <Description>This package it's an easy way to enable PKCE (Proof Key for Code Exchange) in ASP.NET Core application. PKCE it's an extension to OAuth 2.0 for public clients (e.g., native and single-page applications) has been designed to prevent interception of authorization code.</Description>
    <RepositoryUrl>https://github.com/alextochetto/Hopper.OpenIdConnect.Security</RepositoryUrl>
    <PackageTags>ASP.NET Core;OpenIdConnect;PKCE;Security</PackageTags>
    <tags>Security OpenIdConnect PKCE</tags>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
      <None Include="Images\icon.png" Pack="true" PackagePath=""/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="3.1.9" />
  </ItemGroup>

</Project>
